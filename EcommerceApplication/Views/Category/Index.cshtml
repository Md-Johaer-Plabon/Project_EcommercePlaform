@model List<Category>
<div class="Container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 text-primary> Category List </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="CategoryList" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus-fill"></i>Add
            </a>
        </div>

    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td>@obj.Order</td>
                    <td>
                        <div class="col-6 text-end">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-info" role="menubar">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="col-6 text-end">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                <i class="bi bi-trash3-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    
    </table>
</div>